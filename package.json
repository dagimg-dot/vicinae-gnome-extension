{
  "name": "vicinae-gnome-extension",
  "version": "1.2.2",
  "author": "Dagim G. Astatkie",
  "type": "module",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@girs/gjs": "^4.0.0-beta.25",
    "@girs/gnome-shell": "^48.0.2",
    "esbuild": "^0.25.9",
    "esbuild-plugin-tsc": "^0.5.0",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "dev": "bun check && ./scripts/build.sh -r",
    "dev:nested": "bun build:install && env MUTTER_DEBUG_DUMMY_MODE_SPECS=1500x900 dbus-run-session -- gnome-shell --nested --wayland",
    "build": "./scripts/build.sh",
    "build:install": "bun check && ./scripts/build.sh --install",
    "setup": "./scripts/setup-vm.sh",
    "log": "./scripts/log.sh -f",
    "log:all": "./scripts/log.sh",
    "lint": "biome lint --write .",
    "lint:fix": "biome lint --write --unsafe .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "check:types": "tsc -noEmit",
    "bump": "bun scripts/bump-version.js bump",
    "release": "bun scripts/bump-version.js release"
  }
}
